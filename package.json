{
  "name": "vite-async-component-loader",
  "version": "0.1.0",
  "description": "Vite plugin that easiest way loads component files as asynchronous components.",
  "author": "Alex Liu <dsa1314@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Mini-ghost/vite-async-component-loader",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mini-ghost/vite-async-component-loader.git"
  },
  "bugs": "https://github.com/Mini-ghost/vite-async-component-loader/issues",
  "keywords": [
    "vite",
    "vue",
    "async-component"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "client.d.ts",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "publish:ci": "esno scripts/publish.ts"
  },
  "dependencies": {
    "knitwork": "^1.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "@antfu/utils": "^0.7.2",
    "@types/node": "^18.16.2",
    "eslint": "^8.39.0",
    "esno": "^0.16.3",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.3"
  }
}
